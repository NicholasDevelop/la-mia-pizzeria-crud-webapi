@model PizzaCategories

<div class="container w-100 d-flex justify-content-center my-5">
    <form action="@Url.Action("Create", "Pizzas")" method="post" class="w-50">
    @*<form asp-controller="Pizzas" asp-action="Create" method="post">*@

        @Html.AntiForgeryToken()
        <div class="mb-3">
            <strong>Nome:</strong>
            <input asp-for="Pizza.Name" class="d-block w-100" />
            <span asp-validation-for="Pizza.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <strong>Descrizione:</strong>
            <textarea asp-for="Pizza.Description" rows="5" class="d-block w-100"></textarea>
            <span asp-validation-for="Pizza.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <strong>Prezzo:</strong>
            <input asp-for="Pizza.Price" class="d-block w-100" />
            <span asp-validation-for="Pizza.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <strong>Immagine:</strong>
            <input asp-for="Pizza.Img" class="d-block w-100" />
            <span asp-validation-for="Pizza.Img" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <strong>Categoria:</strong>
            <select asp-for="Pizza.CategoryId" class="d-block w-100" />
                <option value=""></option>
                @foreach (Category category in Model.Categories)
                {
                    @if(Model.Pizza.CategoryId == category.Id)
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }
                    else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
            @*<span asp-validation-for="Pizza.CategoryId" class="text-danger"></span>*@
        </div>

        <div class="mb-4">
            <strong>Categorie:</strong>
            <select asp-for="SelectedIngredients"
                multiple="multiple" size="10" class="form-control mb-2 mr-sm-2 ml-sm-3 leftList" asp-items="@Model.Ingredients">
            </select>
        </div>


        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Salva" />
        </div>
    </form>
</div>